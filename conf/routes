#GET    /alumnos/nuevo/lista             controllers.Alumnos.interfazNuevosXLista()
#GET    /alumnos/:dni/estadisticas       controllers.Alumnos.interfazEstadisticas(dni: Long)
GET    /alumnos/buscar                  controllers.Alumnos.buscarAlumnos(q: String)
#POST   /perfil/cambiarContrasenia       controllers.Alumnos.cambiarContrasenia()

# Map static resources from the /public folder to the /assets URL path
GET    /assets/javascripts/routes       controllers.Application.jsRoutes()
GET    /assets/*file                    controllers.Assets.at(path="/public", file)