# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Login
GET    /login                                 controllers.Application.interfazLogin()
POST   /login                                 controllers.Application.autenticar()

GET    /logout                                controllers.Application.logout()
GET    /recuperarContrasenia                  controllers.Application.recuperarContrasenia()

# Home page
GET    /                                      controllers.Application.index()
GET    /perfil                                controllers.Application.interfazPerfilUsuario()
#GET    /perfil/editar                   controllers.Application.interfazModificarUsuario()
GET    /perfil/cambiarContrasenia             controllers.Application.interfazCambiarContrasenia()


#POST   /docentes/nuevo                  controllers.DocenteController.registrarDocente()
#POST   /docentes/actualizar             controllers.DocenteController.actualizarDocente()
#GET    /docentes/eliminar               controllers.DocenteController.eliminarDocente()
GET    /docentes/nuevo                        controllers.DocenteController.interfazNuevo()
POST   /docentes/registrar                    controllers.DocenteController.registrarDocente()
POST   /docentes/cambiarContrasenia           controllers.DocenteController.cambiarContrasenia()

GET    /problemas/index                       controllers.ProblemaController.index()
GET    /problemas                             controllers.ProblemaController.list(p:Int ?= 0, s ?= "id", o ?= "asc", f ?= "")
GET    /problemas/nuevo                       controllers.ProblemaController.interfazNuevo()
GET    /problemas/:id                         controllers.ProblemaController.interfazEditar(id:Integer)
POST   /problemas/registrar                   controllers.ProblemaController.registrarProblema()
POST   /problemas/:id                         controllers.ProblemaController.actualizarProblema(id:Integer)
POST   /problemas/:id/delete                  controllers.ProblemaController.eliminarProblema(id:Integer)
GET    /problemas/ajax/buscar                 controllers.ProblemaController.buscarProblemas(q: String)
POST   /problemas/render/edicion/:id          controllers.ExamenController.renderPreguntaEdicion(id: Integer)

GET    /alumnos/index                         controllers.AlumnoController.index()
GET    /alumnos                               controllers.AlumnoController.list(p:Integer ?= 0, s ?= "dni", o ?= "asc", f ?= "")
GET    /alumnos/nuevo                         controllers.AlumnoController.interfazNuevo()
POST   /alumnos/registrar                     controllers.AlumnoController.registrarAlumno()
GET    /alumnos/:id                           controllers.AlumnoController.interfazEditar(id:Integer)
POST   /alumnos/actualizar                    controllers.AlumnoController.actualizarAlumno(id:Integer)
GET    /alumnos/buscar                        controllers.AlumnoController.buscarAlumnos(q: String)
GET    /alumnos/ajax/disponibles              controllers.AlumnoController.disponibles()
POST   /alumnos/cambiarContrasenia            controllers.AlumnoController.cambiarContrasenia()

GET    /gruposexpertos/index                  controllers.GrupoExpertoController.index()
GET    /gruposexpertos                        controllers.GrupoExpertoController.list(p:Int ?= 0, s ?= "id", o ?= "asc", f ?= "")
GET    /gruposexpertos/nuevo                  controllers.GrupoExpertoController.interfazNuevo()
POST   /gruposexpertos/registrar              controllers.GrupoExpertoController.registrarGrupoExperto()
GET    /gruposexpertos/:id                    controllers.GrupoExpertoController.interfazEditar(id:Integer)
POST   /gruposexpertos/:id                    controllers.GrupoExpertoController.actualizarGrupoExperto(id:Integer)
POST   /gruposexpertos/:id/delete             controllers.GrupoExpertoController.eliminarGrupoExperto(id:Integer)
GET    /gruposexpertos/:id/asignarAlumnos     controllers.GrupoExpertoController.interfazAsignar(id: Integer)
POST   /gruposexpertos/:id/setAlumnos         controllers.GrupoExpertoController.definirAlumnos(id: Integer)

GET    /sesionesjigsaw/index                  controllers.SesionJigsawController.index()
GET    /sesionesjigsaw                        controllers.SesionJigsawController.list(p:Int ?= 0, s ?= "id", o ?= "asc", f ?= "")
GET    /sesionesjigsaw/nuevo                  controllers.SesionJigsawController.interfazNuevo()
POST   /sesionesjigsaw/registrar              controllers.SesionJigsawController.registrarSesionJigsaw()
GET    /sesionesjigsaw/:id                    controllers.SesionJigsawController.editarSesionJigsaw(id:Integer)
POST   /sesionesjigsaw/:id                    controllers.SesionJigsawController.actualizarSesionJigsaw(id:Integer)
POST   /sesionesjigsaw/:id/delete             controllers.SesionJigsawController.eliminarSesionJigsaw(id:Integer)
GET    /sesionesjigsaw/:id/asignarProblemas   controllers.SesionJigsawController.asignarProblemas(id: Integer)
POST   /sesionesjigsaw/:id/guardarProblemas   controllers.SesionJigsawController.guardarProblemas(id:Integer)

GET    /examenes/index                        controllers.ExamenController.index()
GET    /examenes                              controllers.ExamenController.list(p:Int ?= 0, s ?= "id", o ?= "asc", f ?= "")
GET    /examenes/nuevo                        controllers.ExamenController.interfazNuevo()
POST   /examenes/registrar                    controllers.ExamenController.crearExamen()
GET    /examenes/:id/editar                   controllers.ExamenController.interfazEditar(id: Integer)
POST   /examenes/:id/editar                   controllers.ExamenController.guardarExamen(id: Integer)
GET    /examenes/:id/horario                  controllers.ExamenController.interfazDefinirHorario(id: Integer)
POST   /examenes/:id/horario                  controllers.ExamenController.definirHorario(id: Integer)
POST   /examenes/:id/delete                   controllers.ExamenController.eliminarExamen(id: Integer)

